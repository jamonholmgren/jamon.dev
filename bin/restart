#!/bin/bash
source "./bin/env.sh"

echo "Restarting server..."

echo "Killing any active 'qb64_server' processes running"
ssh $SSH_USER@$DOMAIN "pkill qb64_server"

echo "Killing any active processes running on port 80"
ssh $SSH_USER@$DOMAIN "lsof -t -i:80 | xargs -r kill"

echo "Restarting the watcher service"
ssh $SSH_USER@$DOMAIN "systemctl restart qb64-watcher.service"

# Start the server
./bin/start
