#!/bin/bash

URL="https://jamon.dev"
STATUS_CODE=$(curl --max-time 10 --write-out '%{http_code}' --silent --output /dev/null $URL)

if [[ $STATUS_CODE -ne 200 ]]; then
  echo "the website is down! status code: $STATUS_CODE"
  echo "restarting server..."
  pkill qb64_server
else
  echo "the website is up! status code: $STATUS_CODE"
fi
